<div class='main'>
  <div class='title'>
    <h1>All Tuition Fees</h1>
  </div>

  <div class='main-left tableFixHead'>
    <table>
      <thead>
        <tr>
            <th>TUITION_FEE_ID</th>
            <th>TUITIONFEE_CODE</th> 
            <th>TERM_1_FEE</th>
            <th>TERM_2_FEE</th>
            <th>TERM_3_FEE</th>
            <th>TERM_4_FEE</th>
            <th>TERM_3_Fee</th>      
        </tr>
      </thead>
      <tbody>
        <% @tuitionfees.each do |fee| %>
          <tr>
            <td><%= fee.id %></td>
            <td><%= fee.tuitionfee_code %></td>
            <td><%= fee.term_1_fee %></td>
            <td><%= fee.term_2_fee %></td>
            <td><%= fee.term_3_fee %></td>
            <td><%= fee.term_4_fee %></td>
            <td><%= fee.full_year_fee %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class='main-right'>
    <b><%= link_to "+ Create New Tuition Fee", new_tuitionfee_path %></b>
  </div>
</div>

